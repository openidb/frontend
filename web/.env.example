# Database Configuration
# Copy this file to .env and update with your actual credentials

# PostgreSQL Connection String
DATABASE_URL="postgresql://postgres:password@localhost:5432/arabic_texts_library?schema=public"

# Qdrant Vector Database
QDRANT_URL="http://localhost:6333"

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"

# Neo4j Knowledge Graph
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="changeme"

# OpenRouter API (embeddings, reranking, query expansion, translation)
OPENROUTER_API_KEY="your-openrouter-api-key"

# Jina API (reranking)
JINA_API_KEY="your-jina-api-key"

# Groq API (voice transcription with Whisper)
GROQ_API_KEY="your-groq-api-key"

# Environment
NODE_ENV="development"
